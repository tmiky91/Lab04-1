<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="442.0" prefWidth="561.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.lab04.controller.SegreteriaStudentiController">
   <top>
      <Label text="Lab3_Segreteria Studenti" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="20.0" top="10.0" />
         </BorderPane.margin></Label>
   </top>
   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="50.0">
               <children>
                  <Label text="Corso:" />
                  <ComboBox fx:id="btnComboBox" prefWidth="150.0" promptText="Corsi" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Button fx:id="btnCercaIscritti" mnemonicParsing="false" onAction="#doSearchStudent" text="Cerca Iscritti Corso" />
               </children>
            </HBox>
            <HBox spacing="20.0">
               <children>
                  <Label text="Studente:" />
                  <TextField fx:id="txtMatricola" prefHeight="30.0" prefWidth="110.0" />
                  <ImageView fx:id="imgCompila" fitHeight="33.0" fitWidth="38.0" onMouseClicked="#doCompila">
                     <image>
                        <Image url="@../../../../../../../spunta-verde.png" />
                     </image>
                  </ImageView>
                  <TextField fx:id="txtnome" prefHeight="30.0" prefWidth="110.0" />
                  <TextField fx:id="txtCognome" prefHeight="30.0" prefWidth="110.0" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <AnchorPane>
                     <children>
                        <Button fx:id="btnCercaCorsi" mnemonicParsing="false" onAction="#doSearchCourse" text="Cerca Corsi" AnchorPane.rightAnchor="135.0" />
                        <Button fx:id="btnIscrivi" mnemonicParsing="false" onAction="#doIscrivi" text="Iscrivi" AnchorPane.rightAnchor="-310.0" />
                     </children>
                  </AnchorPane>
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER">
               <children>
                  <TextArea fx:id="txtResult" />
               </children>
            </HBox>
            <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="btnReset" mnemonicParsing="false" onAction="#doReset" text="Reset" />
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets left="10.0" right="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
